<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#616161"
    tools:context="com.example.zunay.dxballgame.MainMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DX Ball Game"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

     <ImageButton
         android:id="@+id/level_1"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:onClick="level_click"
         android:src="@mipmap/level1"
         android:background="@color/Black"
         android:scaleType="fitCenter"
         android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/level_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/level2"
            android:background="@color/Black"
            android:scaleType="fitCenter"
            android:onClick="level_click"
            android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/level_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/level3"
            android:background="@color/Black"
            android:scaleType="fitCenter"
            android:onClick="level_click"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/level_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="level_click"
            android:src="@mipmap/level4"
            android:background="@color/Black"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/level_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/level5"
            android:onClick="level_click"
            android:background="@color/Black"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/level_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/level6"
            android:onClick="level_click"
            android:background="@color/Black"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/level_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/level7"
            android:onClick="level_click"
            android:background="@color/Black"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/level_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/level8"
            android:onClick="level_click"
            android:background="@color/Black"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"/>
        <ImageButton
            android:id="@+id/level_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/level9"
            android:onClick="level_click"
            android:background="@color/Black"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"/>

    </LinearLayout>


</LinearLayout>
